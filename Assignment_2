#include <iostream>
using namespace std;

// Function to implement Bubble Sort
void bubbleSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Swap values
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
        // Show progress after each pass
        cout << "After pass " << i + 1 << ": ";
        for (int k = 0; k < n; k++) {
            cout << arr[k] << " ";
        }
        cout << endl;
    }
}

int main() {
    int n;
    cout << "Enter number of scores: ";
    cin >> n;

    int scores[n];
    cout << "Enter " << n << " scores: ";
    for (int i = 0; i < n; i++) {
        cin >> scores[i];
    }

    cout << "\nSorting scores using Bubble Sort...\n";
    bubbleSort(scores, n);

    cout << "\nFinal Sorted Scores (Level-Up!): ";
    for (int i = 0; i < n; i++) {
        cout << scores[i] << " ";
    }
    cout << endl;

    return 0;
}
